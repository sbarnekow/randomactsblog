<section class = "post-container">
	<p>
		<strong>Title:</strong>
		<%= @post.title %>
	</p>
	<p>
		<strong>Body:</strong>
		<%= @post.text %>
	</p>
	<p>
		<strong>Date:</strong>
		<%= @post.created_at %>
	</p>
	<%= link_to 'Back', posts_path %>
	| <%= link_to 'Edit', edit_post_path(@post) %>
</section>